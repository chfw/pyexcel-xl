{% extends "travis.yml.jj2" %}
{%block test_other_python_versions%}  - 2.6
  - 3.3
  - 3.4
  - 3.5
  - pypy
  - 3.6
{%endblock%}

{%block extra_matrix%}
matrix:
  include:
    - python: 2.7
      dist: trusty
      sudo: required
      virtualenv:
        system_site_packages: true
      addons:
        apt:
          packages:
            - python-xlwt
            - python-xlrd
            - python-coverage
            - python-nose
            - python-mock
{%endblock%}

{%block custom_install %}  - if [[ $TRAVIS_PYTHON_VERSION == "2.6" ]]; then pip install ordereddict; fi
{%endblock%}
